                        app:rcTextProgressColor="@android:color/white"
                        app:rcTextProgressMargin="8dp"
                        app:rcTextProgressSize="15sp" />


                    <TextView
                        android:id="@+id/tv_donat_invest_zero"
                        android:layout_width="wrap_content"
