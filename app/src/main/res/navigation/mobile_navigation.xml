<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.myapplication.screens.core.home.HomeFragment"
        android:label=""
        app:defaultNavHost="false"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_nav_home_to_detailCardFragment"
            app:destination="@id/detailCardFragment"
            app:exitAnim="@anim/anim_zum_close"
            app:popEnterAnim="@anim/anim_zum_far" />
        <action
            android:id="@+id/action_nav_home_to_createCardFragment"
            app:destination="@id/createCardFragment" />
    </fragment>

    <fragment
        android:id="@+id/detailCardFragment"
        android:name="com.example.myapplication.screens.core.cardDetail.DetailCardFragment"
        tools:layout="@layout/fragment_detali_card" />

    <fragment
        android:id="@+id/createCardFragment"
        android:name="com.example.myapplication.screens.core.cardCreate.CreateCardFragment"
        tools:layout="@layout/fragment_create_card" />
    <fragment
        android:id="@+id/nav_about_business"
        android:name="com.example.myapplication.screens.core.aboutbusiness.AboutBusinessFragment"
        android:label="fragment_about_business"
        tools:layout="@layout/fragment_about_business" />
    <fragment
        android:id="@+id/communityFragment"
        android:name="com.example.myapplication.screens.core.community.CommunityFragment"
        android:label="fragment_community"
        tools:layout="@layout/fragment_community" />


</navigation>